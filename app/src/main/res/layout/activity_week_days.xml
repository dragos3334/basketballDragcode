<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dragos.basketballdragcode.WeeKDaysActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/monday"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:layout_centerHorizontal="true"
            android:id="@+id/DWMonday"
            android:layout_gravity="center"
            android:textSize="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap for Details"
            android:layout_below="@id/DWMonday"
            android:layout_centerHorizontal="true"
            android:id="@+id/tap"
            android:layout_gravity="center"
            android:textSize="10sp"/>


        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="I am Out"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tap"
            android:id="@+id/outButton"
            android:visibility="gone"/>

        <ListView
            android:layout_marginTop="50dp"
            android:layout_below="@id/tap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listM">

        </ListView>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="I am In"
            android:id="@+id/mBut"
            android:layout_below="@+id/tap"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</RelativeLayout>


